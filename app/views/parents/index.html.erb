<nav class="navbar navbar-light bg-light">
  <a class="nav-link">Padres VBS Colombia</a>
  <%= form_tag parents_path, method: :get, class: "form-inline" do %>
      <%= text_field_tag :first_name, params[:first_name], class: "form-control mr-sm-2", placeholder: "Nombre" %>
      <br><br>
      <%= text_field_tag :church, params[:church], class: "form-control mr-sm-2", placeholder: "Iglesia" %>
    <%= submit_tag "Buscar", name: nil, class: "btn btn-outline-info my-2 my-sm-0" %>
  <% end %>
</nav>

<div class="table-responsive-sm">
  <table class="table">
    <thead class="thead-light">
    <tr>
      <th>Nombre(s)</th>
      <th>Apellidos(s)</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Iglesia</th>
      <th>Valor Cancelado</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <br>
    <tbody>
      <% @parents.each do |parent| %>
        <tr>
          <td><%= link_to parent.first_name, parent_path(parent) %></td>
          <td><%= parent.last_name %></td>
          <td><%= parent.email %></td>
          <td><%= parent.phone %></td>
          <td><%= parent.church %></td>
          <td><%= parent.amount_paid %></td>
          <td>
            <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_parent_path(parent), class: "btn btn-info" %>
          </td>
          <td>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, { action: :destroy, id: parent.id }, method: :delete, data: { confirm: 'Estás seguro?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
