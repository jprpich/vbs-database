<h2>Hijos de <%= @parent.name %></h2>
<table class="table">
  <thead class="thead-light">
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Edad</th>
    <th>Tarjeta de Identidad</th>
    <th>Opciones</th>
  </tr>
  </thead>
  <tbody>
    <% @parent.children.each do |child| %> 
      <tr>
        <td><%= child.first_name %></td>
        <td><%= child.last_name %></td>
        <td><%= child.age %></td>
        <td><%= child.identification %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

<br>
<br>

<div class="row">
  <div class="col-sm-6">
    <h2>Agregar Hijo</h2>
    <%= form_for [@parent, @parent.children.build] do |f| %>
      <div class="form-group">
          <div class="form-group">
            <%= f.label :Nombre %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div> 
          <div class="form-group">
            <%= f.label :Apellido %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :edad %>
            <%= f.number_field :age, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Tarjeta_de_identidad %>
            <%= f.number_field :identification, class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
