<h2>Hijos de <%= @parent.first_name %> <%= @parent.last_name %></h2>
<table class="table">
  <thead class="thead-light">
  <tr>
    <th>Nombre(s)</th>
    <th>Apellido(s)</th>
    <th>Edad</th>
    <th>Tarjeta de Identidad</th>
    <th>EPS</th>
    <th>Opciones</th>
  </tr>
  </thead>
  <tbody>
    <% @parent.children.each do |child| %> 
      <tr>
        <td><%= link_to child.first_name, child %></td>
        <td><%= child.last_name %></td>
        <td><%= child.age %></td>
        <td><%= child.identification %></td>
        <td><%= child.health_provider %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_child_path(child), class: "btn btn-info" %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, child, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-danger" %>
        </td> 
      </tr>
    <% end %> 
  </tbody>
</table>

<br>
<br>

<div class="row">
  <div class="col-sm-6">
    <h2>Agregar Hijo</h2>
    <%= form_for [@parent, @parent.children.build] do |f| %>
      <div class="form-group">
          <div class="form-group">
            <%= f.label :Nombres %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div> 
          <div class="form-group">
            <%= f.label :Apellidos %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :edad %>
            <%= f.number_field :age, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Tarjeta_de_identidad %>
            <%= f.number_field :identification, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :EPS %>
            <%= f.text_field :health_provider, class: "form-control" %>
          </div> 
          <%= f.submit class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
