<% if obj.errors.any? %>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="alert alert-danger" role="alert">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>
